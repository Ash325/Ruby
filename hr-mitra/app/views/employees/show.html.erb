<div class="col-lg-12">
<div class="card mt-5 mb-5 m-auto"  style="width: 90%;">
  <div class="card-body">
    <h1 class="text-center">View Employee Details</h1>
    </div>
</div>



<div class="row ">
  <div class="col-md-6">
<h3> First Name <h3>
<%= @employee.F_Name%>


  </div>
  <div class="col-md-6">
<h3> Last Name <h3>
<%= @employee.L_Name%>
  </div>
  </div>

  <div class="col-12 mt-5">
<h3> Address <h3>
<%= @employee.Adreess%>
  </div>

  <div class="row mt-5">
  <div class="col-md-6">
<h3> Mail ID <h3>
<%= @employee.Mail_Id%>
  </div>

  <div class="col-md-6">
<h3> Contact_No <h3>
<%= @employee.Contact_No%>
  </div>
  </div>

  <div class="row mt-5">
  <div class="col-md-6">
<h3> Date_of_Birth <h3>
<%= @employee.date_of_birth%>
  </div>
  <div class="col-md-6">
<h3> Date_of_Birth <h3>
<%= @employee.date_of_joining%>
  </div>
  </div>

  <div class="col-md-4 mt-5 mb-4">
<h3> Department <h3>
<%= @employee.Department%>
  </div>


<% if @employee.documents.present? %>
  <div class="row mt-5">
    <h2 class="text-center">Employee Documents</h2>
    <% @employee.documents.each do |d| %>

  </div>
  <div class="card mt-4">
    <div class="card-body">
      <div class="row">
        <% if d.doc_upload.attached? %>
        <div class="col-lg-4">
          <%= image_tag d.doc_upload, class:"img-fluid"%>
        </div>
        <%end%>
        <div class="col-lg-4">
          <p class="lead"><%= d.name %></p>
        </div>
        <div class="col-lg-4">
          <p class="lead"><%= d.doc_type %></p>
        </div>
      </div>
    </div>
  <%end%>
  </div>
<%end%>








  <div class="col-lg-12">
  <div class="col-md-12 mt-5">
      <%= link_to "Edit", edit_employee_path, class:"btn btn-primary" %>
  <div class="col-md-12 d-grid d-md-flex justify-content-end">
      <%= link_to "Back", employees_path,class:"btn btn-primary"%>
  </div>
  </div>
  </div>



