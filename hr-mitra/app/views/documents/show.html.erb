    <h3 class=" d-grid d-md-flex justify-content-center mt-2"> Document Image </h3>
  <%# </div>   %>
  <% end %>

    
<div class="col-lg-12">
  <div class="col-md-12 mt-5">
      <%= link_to "Edit", edit_document_path, class:"btn btn-primary" %>
      <div class="col-md-12 d-grid d-md-flex justify-content-end">
          <%= link_to "Back", documents_path,class:"btn btn-primary"%>
      </div>
  </div>
</div>